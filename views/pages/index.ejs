<!DOCTYPE html>
<html>
<head>
  <title>Game of Life</title>
  <link rel="stylesheet" href="./stylesheets/main.css">
  <link href='https://fonts.googleapis.com/css?family=Karla' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=KoHo' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Overpass Mono' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Pavanam' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Play' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Press Start 2P' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Roboto Mono' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Share Tech Mono' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Source Code Pro' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Ubuntu Mono' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Anonymous Pro' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Blinker' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Changa' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Cousine' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Geo' rel='stylesheet'>
  <link href='https://fonts.googleapis.com/css?family=Hepta Slab' rel='stylesheet'>
</head>
<body>
  <h1 id='mainHeader'>
    <p>
      Conway's Game of Life
    </p>
    <a href="https://github.com/Jared-Ma/Game-of-Life">
      Github
    </a>
  </h1>
  <div id='main'>
  </div>
  <div id='sub'>

    <div id='sub1'>
      <div id='buttons'>
        <div>
          <button id="pauseButton">Start</button>
        </div>
        <div>
          <button id="backwardButton">Backward</button>
        </div>
        <div>
          <button id="forwardButton">Forward</button>
        </div>
        <div>
          <button id="resetButton">Reset</button>
        </div>
      </div>

      <div id='switches'>
        <div class='switchContainer'>
          <header>Mouse action:</header>
          <div id="addText" class="switchText">Add</div>
          <label class="switch">
            <input id="actionInput" type="checkbox" autocomplete="off">
            <span class="slider"></span>
          </label>
          <div id="deleteText" class="switchText">Delete</div>
        </div>
        <div class='switchContainer'>
          <header>Edge wrap:</header>
          <div id="onWrapText" class="switchText">On</div>
          <label class="switch">
            <input id="wrapInput" type="checkbox" autocomplete="off">
            <span class="slider"></span>
          </label>
          <div id="offWrapText" class="switchText">Off</div>
        </div>
        <div class='switchContainer'>
          <header>Grid Lines:</header>
          <div id="onLinesText" class="switchText">On</div>
          <label class="switch">
            <input id="linesInput" type="checkbox" autocomplete="off" checked="true">
            <span class="slider"></span>
          </label>
          <div id="offLinesText" class="switchText">Off</div>
        </div>
      </div>
    </div>

    <div id='sub2'>
      <div id='ranges'>
        <div class="rangeContainer">
          <header>Max FPS:</header>
          <input id="fpsInput" type="range" min="1" max="30" step="1" value="1" autocomplete="off" oninput="fpsOutput.value = fpsInput.value">
          <output id="fpsOutput">1</output>
        </div>
        <div class="rangeContainer">
          <header>Cell Size:</header>
          <input id="cellSizeInput" type="range" min="10" max="40" step="10" value="40" autocomplete="off" oninput="cellSizeOutput.value = cellSizeInput.value">
          <output id="cellSizeOutput">40</output>
        </div>
      </div>
    </div>

    <div id='sub3'>
      <div id='statistics'>
        <div id="generationCount">Generation: 0</div>
        <div id="populationCount">Population: 0</div>
      </div>
    </div>

  </div>
  <script type="text/javascript" src="/scripts/grid.js"></script>
  <script type="text/javascript" src="/scripts/cell.js"></script>
  <script type="text/javascript" src="/scripts/patterns.js"></script>
  <script type="text/javascript" src="/scripts/draw.js"></script>
  <script type="text/javascript" src="/scripts/input.js"></script>
  <script type="text/javascript" src="/scripts/main.js"></script>
</body>
</html>